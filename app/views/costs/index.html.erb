<p id="notice"><%= notice %></p>

<h1>Costs</h1>

<table>
  <thead>
    <tr>
      <th>Submitter</th>
      <th>Expense date</th>
      <th>Level1</th>
      <th>Level2</th>
      <th>Level3</th>
      <th>Amount</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @costs.each do |cost| %>
      <tr>
        <td><%= cost.submitter %></td>
        <td><%= cost.expense_date %></td>
        <td><%= cost.level1_id %></td>
        <td><%= cost.level2_id %></td>
        <td><%= cost.level3_id %></td>
        <td><%= cost.amount %></td>
        <td><%= cost.comments %></td>
        <td><%= link_to 'Show', cost %></td>
        <td><%= link_to 'Edit', edit_cost_path(cost) %></td>
        <td><%= link_to 'Destroy', cost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

