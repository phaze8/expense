<table class="striped responsive-table">
  <thead>
    <tr>
      <% if flag == 1 %>
        <th>Submitter</th> 
      <% end %>
      <th>Expense date</th>
      <th class="hide-on-small-and-down">Level1</th>
      <th class="hide-on-small-and-down">Level2</th>
      <th class="hide-on-small-and-down">Level3</th>
      <th>Amount</th>
      <th class="hide-on-small-and-down">Receipt</th>
      <th>Comments</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @costs.each do |cost| %>
      <tr>
        <% if flag == 1 %>
          <td><%= cost.submitter %></td> 
        <% end %>
        <td><%= cost.expense_date %></td>
        <td class="hide-on-small-and-down"><%= cost.level1.name %></td>
        <td class="hide-on-small-and-down"><%= cost.level2.name %></td>
        <td class="hide-on-small-and-down"><%= cost.level3.name %></td>
        <td><%= number_to_currency(cost.amount, precision: 2) %></td>
        <td class="hide-on-small-and-down"><%= image_tag cost.image_url(:thumb) if cost.image? %></td>
        <td><%= cost.comments %></td>
        <td>
          <%= link_to fa_icon("pencil-square-o"), edit_cost_path(cost)  %>
        </td>
        <td>
          <%= link_to fa_icon("trash"), cost, method: :delete, data: { confirm: 'Are you sure?' }  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>